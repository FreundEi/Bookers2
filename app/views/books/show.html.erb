<div class="container">
	<div class="row">
		<%= render "books/sidebar" %>
		<h1>Book detail</h1>

		<div class="col-xs-9">
			<table>
				<tbody>
					<th>
						<%= link_to user_path(@book.user_id) do %>
			    			<%= image_tag attachment_url(@book.user, :profile_image, :fill, 50, 50, format: "jpg", fallback: "no_image.png"), size:'50x50'%>
			    			<br><%= @book.user.name %>
	    				<% end %>
    				</th>
					<th><%= link_to @book.title, user_path(@book.user) %></th>
					<th><%= @book.body %></th>
					<% if current_user.id == @book.user_id %>
						<th><%= link_to "Edit", edit_book_path(@book.id) %></th>
					 	<th><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"} %></th>
				 	<% end %>
			    </tbody>
			</table>
		</div>
    </div>
</div>