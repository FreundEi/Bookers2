<div class="container">
	<%= notice %>
	<div class="row">
		<%= render "books/sidebar" %>
		<h1>Book detail</h1>

		<div class="col-xs-9">
			<table>
				<tbody>
					<th><%= @book.title %></th>
					<th><%= @book.body %></th>
					<% if current_user.id == @book.user_id %>
						<th><%= link_to "Edit", edit_book_path(@book.id) %></th>
					 	<th><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"} %></th>
				 	<% end %>
			    </tbody>
			</table>
		</div>
    </div>
</div>