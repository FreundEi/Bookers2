<div class="container">

  <div class="text-danger">
    <% if @book.errors.any? %>
        <ul>
          <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
  </div>

	<div class="row">
		<%= render "books/sidebar" %>
		<div class="col-xs-9">

			<h2>Books</h2>

			<table class="table table-hover table-inverse">
        <thead>
          <tr>
          	<th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
        	<% @books.each do |book| %>
        		<tr>
            	<td>
            		<%= link_to user_path(book.user_id) do %>
            			<%= image_tag attachment_url(book.user, :profile_image, :fill, 50, 50, format: "jpg", fallback: "no_image.png"), size:'50x50'%>
            		<% end %>
            	</td>
			        <td><%= link_to book.title, book_path(book.id) %></td>
			        <td><%= book.body %></td>
        		</tr>
          <% end %>
        </tbody>
      </table>

		</div>
	</div>
</div>
