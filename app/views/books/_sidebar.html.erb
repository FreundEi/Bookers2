<div class="col-xs-3">

  <!-- User info -->
	<h2>User info</h2>

  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback:"no_image.png", size:'100x100' %>

  <table class="table">
  	<tbody>
	    <tr>
		    <th>Name</th>
        <th><%= @user.name %></th>
	    </tr>
	    <tr>
		    <th>introduction</th>
        <th><%= @user.introduction %></th>
	    </tr>
  	</tbody>
  </table>

  <%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

  <!-- New book -->
  <h2>New book</h2>
  <%= form_for(@book) do |f| %>
    <div class="field row">
      <label for="book_title">Title</label>
      <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
    </div>

    <div class="field row">
      <label for="book_opinion">Opinion</label>
      <textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
    </div>

    <div class="actions row" style="margin-top: 10px;">
      <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
    </div>
  <% end %>
</div>