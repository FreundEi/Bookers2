<div class="container">
	<div class="row">
		<%= render "books/sidebar" %>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table>
	            <thead>
		            <tr>
		            	<th>image</th>
			            <th>name</th>
		            </tr>
	            </thead>
	            <tbody>
	            	<% @users.each do |user| %>
		            	<tr>
					        <td><%= image_tag attachment_url(user, :profile_image, :fill, 50, 50, format: "jpg", fallback: "no_image.png"), size:'50x50'%></td>
					        <td><%= user.name %></td>
					        <td><%= link_to "show", "/users/#{user.id}" %></td>
				    	</tr>
                	<% end %>
            	</tbody>
            </table>
		</div>
	</div>
</div>
