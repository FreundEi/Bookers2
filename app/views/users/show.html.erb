<div class="container">
	<div class="row">
		<%= render "books/sidebar" %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

        <tbody>
          <% @books.each do |book| %>
					<% if @user.id == book.user_id %>
          	<tr>
		        	<td><%= image_tag attachment_url(book.user, :profile_image, :fill, 50, 50, format: "jpg", fallback: "no_image.png"), size:'50x50'%></td>
			        <td><%= link_to book.title, book_path(book.id) %></td>
			        <td><%= book.body %></td>
			      </tr>
			    <% end %>
			    <% end %>
        </tbody>

      </table>
		</div>
	</div>
</div>
