<div class="container">
	<div class="row">
		<%= render "books/sidebar" %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
	            <% @books.each do |book| %>
	            <tbody>
			        <td><%= book.title %></td>
			        <td><%= book.body %></td>
                </tbody>
                <% end %>
            </table>
		</div>
	</div>
</div>
